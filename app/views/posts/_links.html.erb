<div class="row">
  <div class="btn btn-group">
    <%= link_to 'Назад', root_path, {class: 'btn btn-primary'} %>
    <% if user_signed_in? %>
      <%= link_to 'Изменить', edit_post_path(@post), {class: 'btn btn-default'} %>
      <%= link_to 'Удалить', post_path(@post), class: 'btn btn-default', method: :delete,  data: {confirm: 'Вы уверены?'} %>
    <% end %>
  </div>  
</div>
